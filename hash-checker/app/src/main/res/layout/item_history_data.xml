<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/common_margin_2"
    android:foreground="?selectableItemBackground"
    android:orientation="horizontal"
    tools:ignore="UnusedAttribute">

    <ImageView
        android:id="@+id/iv_item_history_object_type_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/common_margin_2"
        tools:src="@drawable/ic_file"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_item_history_object_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/common_margin"
                android:textColor="?attr/colorAccent"
                tools:text="File:" />

            <TextView
                android:id="@+id/tv_item_history_object_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAlignment="textEnd"
                tools:text="test.zip" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_half">

            <TextView
                android:id="@+id/tv_item_history_hash_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/common_margin"
                android:textColor="?attr/colorAccent"
                tools:text="MD5:" />

            <TextView
                android:id="@+id/tv_item_history_hash_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAlignment="textEnd"
                tools:text="6344db3a6c0cfdc4a99881b5b16127f8" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_half">

            <TextView
                android:id="@+id/tv_item_history_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/common_margin"
                android:textColor="?attr/colorAccent"
                tools:text="Date:" />

            <TextView
                android:id="@+id/tv_item_history_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAlignment="textEnd"
                tools:text="2019-05-25" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>