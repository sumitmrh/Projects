version: '3'

services:

  app:
    build:
      context: .
      dockerfile: Dockerfile
    ports:
      - "8080:8080"
    volumes:
      - .:/app
      - gradle-cache:/root/.gradle
      - ./android-sdk:/android-sdk
      - - ./local.properties:/app/local.properties
    environment:
      - GRADLE_USER_HOME=/root/.gradle
      - ANDROID_HOME: /android-sdk
    command: gradle build


volumes:
  gradle-cache:
